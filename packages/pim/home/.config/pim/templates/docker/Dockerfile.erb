# Generated: <%= _generated_at %>

FROM <%= _base_image %>

LABEL maintainer="pim"
LABEL build.name="<%= _build_name %>"
LABEL build.profile="<%= _profile_name %>"

# Set non-interactive frontend for apt
ENV DEBIAN_FRONTEND=noninteractive

# Install base packages
<% if defined?(packages) && packages && !packages.empty? %>
RUN apt-get update && apt-get install -y \
    <%= packages.split.join(" \\\n    ") %> \
    && rm -rf /var/lib/apt/lists/*
<% else %>
RUN apt-get update && apt-get install -y \
    curl \
    sudo \
    && rm -rf /var/lib/apt/lists/*
<% end %>

# Create user
<% if defined?(username) && username %>
RUN useradd -m -s /bin/bash <%= username %> && \
    echo "<%= username %> ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/<%= username %> && \
    chmod 440 /etc/sudoers.d/<%= username %>
<% end %>

# Copy and run install script if present
<% if defined?(_http_dir) && _http_dir && File.exist?("#{_http_dir}/install.sh") %>
COPY install.sh /tmp/install.sh
RUN chmod +x /tmp/install.sh && /tmp/install.sh && rm /tmp/install.sh
<% end %>

# Set timezone
<% if defined?(timezone) && timezone %>
RUN ln -sf /usr/share/zoneinfo/<%= timezone %> /etc/localtime
<% end %>

# Default command
CMD ["/bin/bash"]
